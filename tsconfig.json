{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"]
  },
}
